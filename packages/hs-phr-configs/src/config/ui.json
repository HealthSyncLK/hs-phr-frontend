{
    "signupForm": {
        "title": "Create a New Account",
        "description": "Join our platform to manage your health records securely.",
        "fields": [
            {
                "name": "fullName",
                "label": "Full Name",
                "type": "text",
                "placeholder": "John Doe"
            },
            {
                "name": "email",
                "label": "Email Address",
                "type": "email",
                "placeholder": "you@example.com"
            },
            {
                "name": "password",
                "label": "Password",
                "type": "password",
                "placeholder": "Enter your password"
            }
        ]
    },
    "loginForm": {
        "title": "Welcome back",
        "description": "Please enter your details to sign in.",
        "fields": {
            "phone": {
                "label": "Mobile Number",
                "placeholder": "Enter mobile number"
            },
            "password": {
                "label": "Password",
                "placeholder": "Enter your password"
            }
        }
    },
    "recordDetailForm": {
        "title": "Health Record",
        "fields": {
            "documentName": {
                "label": "Document Name",
                "placeholder": "ABC",
                "type": "text"
            },
            "documentStatus": {
                "label": "Document Status",
                "placeholder": "Status",
                "type": "select"
            },
            "visibility": {
                "label": "Visibility",
                "placeholder": "Visibility",
                "type": "select"
            },
            "documentType": {
                "label": "Document Type*",
                "placeholder": "Blood Report",
                "type": "text"
            },
            "documentDate": {
                "label": "Document Date",
                "placeholder": "YYYY/MM/DD"
            },
            "doctorName": {
                "label": "Doctor Name",
                "placeholder": "Dr. Asitha",
                "type": "text"
            },
            "documentExpireDate": {
                "label": "Document Expire Date",
                "placeholder": "YYYY/MM/DD"
            },
            "hospital": {
                "label": "Hospital/Clinic",
                "placeholder": "Clinic",
                "type": "text"
            },
            "notes": {
                "label": "Notes/Comments",
                "placeholder": "Blood Report",
                "type": "textarea"
            },
            "reminderDate": {
                "label": "Reminder Date",
                "placeholder": "YYYY/MM/DD"
            },
            "reminderTime": {
                "label": "Time",
                "placeholder": "HH:MM",
                "type": "time"
            },
            "reference": {
                "label": "Reference",
                "placeholder": "Reference",
                "type": "text"
            }
        }
    }
}